<!DOCTYPE html>
<html>
<head>
  <title>PhotoShare</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li class="navbar-text pull-right">Logged in as <%= current_user.name %></li>
          <li class="navbar-text pull-right"><%= link_to "Log Out", logout_path %></li>
          <li class="navbar-text pull-right"><%= link_to "Profile Page", "/users/#{current_user.slug}" %>
          <li class="navbar-text pull-right"><%= link_to "Edit Profile", "/users/#{current_user.slug}/edit" %>
        <% else %>
          <li class="navbar-right"><%= link_to "Sign Up", new_user_path %></li>
          <li class="navbar-right"><%= link_to "Log in", new_session_path %></li>
        <% end %>
      </ul>
    </nav>
    <%= flash[:alert] %>
    <%= flash[:notice] %>
    <%= yield %>
  </div>

</body>
</html>
